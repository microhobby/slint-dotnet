{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build"
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "icon": {
                "id": "flame"
            },
            "group": "build"
        },
        {
            "label": "publish-nuget",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "nuget",
                "push",
                "${workspaceFolder}/bin/Debug/SlintDotnet.1.2.22.nupkg",
                "--api-key",
                "$(", "cat", "${workspaceFolder}/.keys/nugetApi.key", ")",
                "--source",
                "https://api.nuget.org/v3/index.json"
            ],
            "dependsOn": [
                "build"
            ],
            "dependsOrder": "sequence",
            "icon": {
                "id": "package"
            }
        }
    ]
}
